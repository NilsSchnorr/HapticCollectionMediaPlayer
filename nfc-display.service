[Unit]
Description=NFC Display Service
After=multi-user.target graphical.target

[Service]
Type=simple
User=pi
Group=pi
WorkingDirectory=/home/pi/nfc-display
Environment="DISPLAY=:0"
Environment="XAUTHORITY=/home/pi/.Xauthority"
ExecStart=/usr/bin/python3 /home/pi/nfc-display/main.py
Restart=always
RestartSec=5

[Install]
WantedBy=graphical.target
